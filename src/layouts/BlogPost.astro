---
export interface Props {
  title: string;
  date: string;
  description?: string;

}

const props = Astro.props as Props;
const { title, date, description,  } = props;
---

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} | My Blog</title>
</head>
<body>
  <article>
    <header>
      <h1>{title}</h1>
      <p><time datetime={new Date(date).toISOString()}>{new Date(date).toDateString()}</time></p>

      {description && <p>{description}</p>}
    </header>
    
    <main>
      <slot />
    </main>
  </article>
</body>
</html>
